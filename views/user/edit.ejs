
<%- include ../layouts/header.ejs %>	
		
<% if (messages.error) { %>
	<p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
	<p style="color:green"><%- messages.success %></p>
<% } %>

<form action="/users/edit/<%= id %>" method="post" name="form1">
	<table width="25%" border="0">

		<tr> 
			<td>
				<h4>
					Room Number
				</h4>
			</td>
			<td><input type="text" name="roomnumber" value="<%= roomnumber %>" readonly/></td>
		</tr>
		<tr> 
			<td>
				Room type
			</td>
			<!--status and room type-->
			<td><input type="hidden" name="status" value="Unavailable" readonly/><input type="text" name="roomtype" value="<%= roomtype %>" readonly/></td>
		</tr>
		<tr>
			<td></td>
			<td><input type="submit" name="Submit" value="Get Room..." /></td>
		</tr>
	</table>
	<input type="hidden" name="_method" value="PUT" />
</form>


<%- include ../layouts/footer.ejs %>
